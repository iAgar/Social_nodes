<ul>
    <li>
        <%=p.content%>
        <%if(p.user._id == locals.user.id){%>
            <a href="/post/delete/<%=p._id%>">X</a>
        <%}%>
        <br>
        <a href="/user/profile/<%=p.user.id%>"><%=p.user.name%></a>
        <p>Comments: </p>
        <%for(c of p.comment){%>
            <%-include('_comment');%>
        <%}%>
    </li>
    <li>
        <form action="/comment/create" method="POST">
            <input type="text" id="content" name="content" placeholder="Add Comment..." required>
            <input type="hidden" name="post" value="<%=p._id%>">
            <button type="submit">Add Comment</button>
        </form>
    </li>
</ul>