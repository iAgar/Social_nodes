        <script>
            <%if(flash.success && flash.success.length>0){%>
                new Noty({
                    theme: 'sunset',
                    text: "<%=flash.success%>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 3000,
                    progressBar: false
                }).show();
            <%}%>

            <%if(flash.error && flash.error.length>0){%>
                new Noty({
                    theme: 'sunset',
                    text: "<%=flash.error%>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 3000,
                    progressBar: false
                }).show();
            <%}%>
        </script>
