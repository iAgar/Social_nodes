<%if(locals.user){%>
    <h1>Hello Better World</h1>
    <form action="/post/create" method="POST">
        <input type="text" id="content" name="content" placeholder="What is on your mind ?" required>
        <button type="submit">Create Post</button>
    </form>
    <%for(p of post){%>
        <ul>
            <li>
                <%=p.content%>
                <br>
                <%=p.user.name%>
                <p>Comments: </p>
                <%for(c of p.comment){%>
                    <%=c.content%>
                    <br>
                    <%=c.user.name%>
                <%}%>
            </li>
            <li>
                <form action="/comment/create" method="POST">
                    <input type="text" id="content" name="content" placeholder="Add Comment..." required>
                    <input type="hidden" name="post" value="<%=p._id%>">
                    <button type="submit">Add Comment</button>
                </form>
            </li>
        </ul>
    <%}%>
<%}else{%>
<h1>Hello World</h1>
<%}%>